// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int            @id @default(autoincrement())
  email              String?        @unique
  createdAt          DateTime       @default(now()) @map("created_at")
  updatedAt          DateTime       @updatedAt @map("updated_at")
  phoneNumber        String?        @unique
  walletAddress      String?        @unique
  issuer             String?        @unique
  name               String?
  username           String?        @unique
  twitterUsername    String?
  avatarImage        String?
  bannerImage        String?
  nativeAssetBalance String?
  showWalletAddress  Boolean        @default(false)
  events             Event[]
  notifications      Notification[]
  followers          Follows[]      @relation("followers")
  following          Follows[]      @relation("following")
  CoHosts            CoHosts[]

  @@map("Users")
}

model Follows {
  followers   User     @relation("followers", fields: [followersId], references: [id])
  followersId Int
  following   User     @relation("following", fields: [followingId], references: [id])
  followingId Int
  createdAt   DateTime @default(now())

  @@id([followersId, followingId])
}

model Notification {
  id               Int      @id @default(autoincrement())
  title            String?
  description      String?
  avatarImage      String?
  notificationType String?
  createdAt        DateTime @default(now())
  isRead           Boolean  @default(false)
  user             User?    @relation(fields: [userId], references: [id])
  userId           Int?
  followerUserId   Int?

  @@map("Notifications")
}

model Event {
  id             Int       @id @default(autoincrement())
  title          String?
  description    String?
  coverPhoto     String?
  location       String?
  createdAt      DateTime  @default(now())
  host           User?     @relation(fields: [hostId], references: [id])
  hostId         Int?
  startTime      DateTime?
  endTime        DateTime?
  privacySetting String?
  invitable      Boolean   @default(true)
  showGuestList  Boolean   @default(true)
  CoHosts        CoHosts[]

  @@map("Events")
}

model CoHosts {
  id        Int    @id @default(autoincrement())
  event     Event? @relation(fields: [eventId], references: [id])
  eventId   Int?
  cohost    User?  @relation(fields: [cohostId], references: [id])
  cohostId  Int?
}
